@model ChocoShop.Data.Entities.User

@{
    ViewData["Title"] = "Profile";
    Layout = "~/Views/Shared/_LayoutInnerAuth.cshtml";
}

<h2>Profile</h2>

<div>
    <div class="row">
        <div class="col-md-offset-2 col-md-8">
            <div class="form-content">
                <div class="row">
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label>First Name </label>
                            <input asp-for="FirstName" name="FirstName" type="text" class="form-control" disabled />

                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label>Last Name </label>
                            <input asp-for="LastName" type="text" class="form-control" disabled />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label>Email Address </label>
                            <input asp-for="Email" type="email" class="form-control" disabled />
                        </div>

                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label>Phone</label>
                            <input asp-for="PhoneNumber" type="tel" class="form-control" disabled />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label>Last Login </label>
                            <input asp-for="LastLogin" type="text" class="form-control" disabled />
                        </div>

                    </div>
                    <div class="col-sm-6">
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

