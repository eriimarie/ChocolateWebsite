@model ChocoShop.Models.ChangePasswordModel
@{
    ViewData["Title"] = "ChangePassword";
    Layout = "~/Views/Shared/_LayoutInnerAuth.cshtml";
}

<form asp-action="changepassword" asp-controller="account" method="post">
    <div class="row">
        <div class="col-md-5">
            <div class="form-group">
                <label>Old Password</label>
                <input asp-for="CurrentPassword" name="CurrentPassword" type="password" class="form-control" />
                <span asp-validation-for="CurrentPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>New Password</label>
                <input asp-for="Password" name="Password" type="password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Retype New Password</label>
                <input asp-for="ConfirmPassword" name="ConfirmPassword" type="password" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-info btn-large">Change Password</button>
            </div>
        </div>
    </div>
</form>